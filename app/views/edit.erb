<form action="/articles/<%= @article.id %>" method="POST">
    <input type="hidden" name="_method" value="PATCH">
    Article title:<input type="text" name="title" placeholder="title" value="<%= @article.title%>"><br>
    Article Content<input type="textarea" name="content" placeholder="type" value="<%= @article.content%>"><br>
    <input type="submit" id="Submit">
</form>